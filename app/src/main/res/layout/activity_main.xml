<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_coffee"
    >
    <RelativeLayout
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/white_coffee"
        >


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_alignBottom="@+id/dots_indicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dotsColor="@color/lavender_gray"
            app:dotsCornerRadius="4dp"
            app:dotsSize="12dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="4"
            app:selectedDotColor="@color/vivid_tangelo"
            app:progressMode="true"
            android:layout_marginTop="450dp"
            />



    </RelativeLayout>

    <Button
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:backgroundTint="@color/vivid_tangelo"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="70dp"
        android:textColor="@color/vivid_tangelo"
        android:background="@drawable/button_background"
        android:text="Log in"/>
</LinearLayout>